---
interface ProjectData {
  Title: string;
  Short_description: string;
  Cover_path_xl: ImageMetadata;
  Technologies: string[];
}

/* -- Images -- */
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

interface Props {
  slug: string;
  data: ProjectData;
}
const { slug, data } = Astro.props;
---

<a
  href={`/proyectos/${slug}`}
  class="project-card"
  aria-label={`Ir a la pÃ¡gina del proyecto: ${data.Title}`}
>
  <Image
    src={data.Cover_path_xl}
    alt={data.Title}
    widths={[400, data.Cover_path_xl.width]}
    sizes={`(max-width: 500px) 400px, ${data.Cover_path_xl.width}px`}
    transition:name={`project-${data.Title}`}
  />
  <strong transition:name={`project-title-${data.Title}`}>{data.Title}</strong>
  <small>{data.Short_description}</small>
  <span transition:name={`project-technologies-${data.Title}`}>
    {
      data.Technologies.sort().map((tech: string) => (
        <Icon name={`technologies/${tech}`} title={tech} />
      ))
    }
  </span>
</a>
<style lang="scss">
  @use "../styles/components/projectCardIndex";
</style>
