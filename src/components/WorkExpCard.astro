---
const { Information } = Astro.props;
const { Role, Where, Duration, Description, Functions } = Information;
---

<article class="workCard">
  <h3>{Role}</h3>
  <p>
    <strong class="text-accent">{Where}</strong> &nbsp;
    {Duration}
  </p>
  <p>{Description}</p>
  <p>
    <b class="text-accent">Funciones:</b>
    <ul>{Functions.map((f: string) => <li>{f}</li>)}</ul>
  </p>
</article>
<style lang="scss">
  @use "../styles/components/_workCard";
</style>
