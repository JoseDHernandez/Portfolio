---
import { Image } from "astro:assets";
import sena from "../assets/logos/logo_sena.webp";
import ucompensar from "../assets/logos/logo-ucompensar.webp";
const { Data } = Astro.props;
const { Image_path, Title, Duration, Where } = Data;
const logos = {
  logo_ucompensar: ucompensar,
  logo_sena: sena,
};
const logo: ImageMetadata = logos[Image_path as keyof typeof logos];
---

<article class="studyCard">
  <div>
    <Image class="studyCard-logo" alt={`${Where} logo`} src={logo} />
    <p>
      <strong class="studyCard-title">{Title}</strong>
      <small class="studyCard-duration"><i>{Duration}</i></small>
    </p>
  </div>
  <p class="studyCard-where">{Where}</p>
</article>
<style lang="scss">
  @use "../styles/components/_studyCard.scss";
</style>
