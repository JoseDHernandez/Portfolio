---
import { Image } from "astro:assets";
interface Props {
  title: string;
  image: any;
  alternative?: string;
}
const { title, image, alternative } = Astro.props;
---

<figure class="feature-card">
  {title && <h3 class="text-accent">{title}</h3>}
  <figcaption>
    <slot />
  </figcaption>
  <Image
    src={image}
    alt={alternative ? alternative : title}
    widths={[400, 700, image.width]}
    sizes={`(max-width:500px) 400px, (max-width:1024) 700px, ${image.width}px`}
    tabindex="0"
  />
</figure>
<style lang="scss">
  @use "../styles/components/featureCard.scss";
</style>
