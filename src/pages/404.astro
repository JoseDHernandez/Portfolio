  <div
    style="padding: 2rem; display: grid; gap: 2rem; max-width: 900px; margin: auto;"
  >
    <!-- TEXT BUTTONS -->
    <section>
      <h2>Text Buttons</h2>
      <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
        <button class="button-text-primary">Primary</button>
        <button class="button-text-accent">Accent</button>
        <button class="button-text-secondary">Secondary</button>

