    <!-- ICON BUTTONS -->
    <section>
      <h2>Icon Buttons</h2>
      <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
        <button class="button-icon-primary"><Icon name="github_v" /></button>
        <button class="button-icon-accent"><Icon name="github_v" /></button>
        <button class="button-icon-secondary"><Icon name="github_v" /></button>

        <button class="button-icon-background-primary"
          ><Icon name="github_v" /></button
        >
        <button class="button-icon-background-accent"
          ><Icon name="github_v" /></button
        >
        <button class="button-icon-background-secondary"
          ><Icon name="github_v" /></button
        >
      </div>
    </section>

    <!-- TEXT + ICON -->
    <section>
      <h2>Text + Icon Buttons</h2>
      <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
        <button class="button-text-icon-primary"
          ><Icon name="github_v" /> Primary</button
        >
        <button class="button-text-icon-accent"
          ><Icon name="github_v" /> Accent</button
        >
        <button class="button-text-icon-secondary"
          ><Icon name="github_v" /> Secondary</button
        >

        <button class="button-text-icon-background-primary"
          ><Icon name="github_v" /> Bg Primary</button
        >
        <button class="button-text-icon-background-accent"
          ><Icon name="github_v" /> Bg Accent</button
        >
        <button class="button-text-icon-background-secondary"
          ><Icon name="github_v" /> Bg Secondary</button
        >
      </div>
    </section>

    <!-- BORDER VARIANTS -->
    <section>
      <h2>Border Variants</h2>
      <div style="display: flex; gap: 1rem; flex-wrap: wrap;">
        <button class="button-text-icon-border-primary">Primary</button>
        <button class="button-text-icon-border-accent">Accent</button>
        <button class="button-text-icon-border-secondary">Secondary</button>
      </div>
    </section>
  </div>
